        <thead style="padding: 15%; background-color: rgb(227, 132, 0)">
          <tr>
            <th style="width: 50px">DIA</th>
            <th style="width: 50px">MES</th>
            <th style="width: 200px">MONTO DESCONTADO CLIENTE BS.</th>
            <th>TASA DE CAMBIO APLICADA</th>
